<!DOCTYPE html>
<html>
<head>
  <title><%= @title ? full_title(@title) : "Craig Smith's Web Site" %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="hero">
		<div class="row-fluid">
			<div class="span9 payload" align="center">
				<%= yield %>
			</div>
			<div class="span3">
				<div class="twitter">
					<%= render 'layouts/twitter' %>
				</div>
			</div>
		</div>
		<div class="footer">
			<%= render 'layouts/footer' %>
		</div>
	</div>
</body>
</html>
